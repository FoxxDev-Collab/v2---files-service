{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@utils/*": ["../../utils/*"]
    }
    },
    "include": ["src/**/*", "src/server.ts"],
    "exclude": ["node_modules"]
  }